# ========================================
# üîß Configura√ß√£o da API Datalid
# ========================================

# Informa√ß√µes da API
API_NAME=Datalid API
API_VERSION=1.0.0
API_DESCRIPTION=API REST para detec√ß√£o e extra√ß√£o de datas de validade

# Servidor
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=false

# CORS
API_CORS_ENABLED=true
API_CORS_ORIGINS=["*"]
API_CORS_CREDENTIALS=true
API_CORS_METHODS=["*"]
API_CORS_HEADERS=["*"]

# Limites e Seguran√ßa
API_MAX_FILE_SIZE_MB=10.0
API_MAX_BATCH_SIZE=50
API_ALLOWED_EXTENSIONS=[".jpg", ".jpeg", ".png", ".bmp"]

# Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS=60

# Timeout
API_REQUEST_TIMEOUT=300

# Autentica√ß√£o (opcional)
API_AUTH_ENABLED=false
API_API_KEY_HEADER=X-API-Key
API_API_KEYS=[]

# Modelos
API_DEFAULT_YOLO_MODEL=experiments/yolov8m_seg_best/weights/best.pt
API_MODEL_DEVICE=0

# OCR
API_DEFAULT_OCR_ENGINE=openocr
API_DEFAULT_OCR_CONFIG=config/ocr/openocr.yaml
API_DEFAULT_PREPROCESSING_CONFIG=config/preprocessing/ppro-openocr-medium.yaml

# Detec√ß√£o
API_DEFAULT_CONFIDENCE=0.25
API_DEFAULT_IOU=0.7

# Cache
API_CACHE_ENABLED=true
API_CACHE_TTL=3600
API_CACHE_MAX_SIZE=100

# Storage
API_UPLOAD_DIR=uploads
API_RESULTS_DIR=outputs/api_results
API_CLEANUP_UPLOADS=true
API_SAVE_RESULTS_BY_DEFAULT=false

# Logging
API_LOG_LEVEL=INFO
API_LOG_REQUESTS=true
API_LOG_FILE=logs/api.log

# Monitoring
API_ENABLE_METRICS=true
API_METRICS_ENDPOINT=/metrics

# Documenta√ß√£o
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
API_OPENAPI_URL=/openapi.json

# Desenvolvimento
API_DEBUG=false
API_ENVIRONMENT=production
